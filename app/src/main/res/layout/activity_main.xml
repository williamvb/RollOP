<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/rollDisplay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="bottom|right"
        android:textSize="30sp"
        android:textStyle="bold"
        app:fontFamily="serif"
        app:layout_constraintBottom_toTopOf="@+id/l_dices"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/l_dices"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rollDisplay">

        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:onClick="onClick"
                android:id="@+id/d100"
                style="@style/Base.Widget.AppCompat.ButtonBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorDice1"
                android:text="@string/d100"
                android:textAllCaps="false"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:text="100" />

            <Button
                android:onClick="onClick"
                android:id="@+id/d20"
                style="@style/Base.Widget.AppCompat.ButtonBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorDice2"
                android:text="@string/d20"
                android:textAllCaps="false"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:onClick="onClick"
                android:id="@+id/d12"
                style="@style/Base.Widget.AppCompat.ButtonBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorDice3"
                android:text="@string/d12"
                android:textAllCaps="false"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:onClick="onClick"
                android:id="@+id/d10"
                style="@style/Base.Widget.AppCompat.ButtonBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorDice4"
                android:text="@string/d10"
                android:textAllCaps="false"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:onClick="onClick"
                android:id="@+id/d8"
                style="@style/Base.Widget.AppCompat.ButtonBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorDice4"
                android:text="@string/d8"
                android:textAllCaps="false"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:onClick="onClick"
                android:id="@+id/d6"
                style="@style/Base.Widget.AppCompat.ButtonBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorDice3"
                android:text="@string/d6"
                android:textAllCaps="false"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:onClick="onClick"
                android:id="@+id/d4"
                style="@style/Base.Widget.AppCompat.ButtonBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorDice2"
                android:text="@string/d4"
                android:textAllCaps="false"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:onClick="onClick"
                android:id="@+id/dn"
                style="@style/Base.Widget.AppCompat.ButtonBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorDice1"
                android:text="@string/dn"
                android:textAllCaps="false"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="310sp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/l_bt_botton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/l_dices">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/digt7"
                style="@style/Base.Widget.AppCompat.ButtonBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textAllCaps="false"
                android:textStyle="bold" />

            <Button
                android:id="@+id/digt8"
                style="@style/Base.Widget.AppCompat.ButtonBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textAllCaps="false"
                android:textStyle="bold" />

            <Button
                android:id="@+id/digt"
                style="@style/Base.Widget.AppCompat.ButtonBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textAllCaps="false"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/digt4"
                style="@style/Base.Widget.AppCompat.ButtonBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textAllCaps="false"
                android:textStyle="bold" />

            <Button
                android:id="@+id/digt5"
                style="@style/Base.Widget.AppCompat.ButtonBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textAllCaps="false"
                android:textStyle="bold" />

            <Button
                android:id="@+id/digt6"
                style="@style/Base.Widget.AppCompat.ButtonBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textAllCaps="false"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/digt3"
                style="@style/Base.Widget.AppCompat.ButtonBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textAllCaps="false"
                android:textStyle="bold" />

            <Button
                android:id="@+id/digt4"
                style="@style/Base.Widget.AppCompat.ButtonBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textAllCaps="false"
                android:textStyle="bold" />

            <Button
                android:id="@+id/digt5"
                style="@style/Base.Widget.AppCompat.ButtonBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textAllCaps="false"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/digtNeg"
                style="@style/Base.Widget.AppCompat.ButtonBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textAllCaps="false"
                android:textStyle="bold" />

            <Button
                android:id="@+id/digt0"
                style="@style/Base.Widget.AppCompat.ButtonBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAllCaps="false"
                android:textStyle="bold" />

            <Button
                android:id="@+id/digtPlus"
                style="@style/Base.Widget.AppCompat.ButtonBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textAllCaps="false"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:id="@+id/l_bt_botton"
        android:layout_width="0dp"
        android:layout_height="100sp"
        android:gravity="bottom"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout">

        <Button
            android:onClick="onClick"
            android:id="@+id/btClr"
            style="@style/Base.Widget.AppCompat.ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="X"
            android:textAllCaps="false"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btRoll"
            style="@style/Base.Widget.AppCompat.ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ROLL"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btFav"
            style="@style/Base.Widget.AppCompat.ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="S2"
            android:textSize="36sp"
            android:textStyle="bold" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>